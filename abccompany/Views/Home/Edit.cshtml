@model abccompany.Models.user

<section>
    <div class="container">
        <div class="row">
            <div class="col-12"><h2>Edit User Detail</h2></div>
            <div class="col">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.userID)
                    <form>
                        <div class="row p-3 g-3">
                            <div class="col-6">
                                <label class="form-label">Full Name</label>
                                @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-6">
                                <label class="form-label">Contact</label>
                                @Html.EditorFor(model => model.userContact, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-6">
                                <label class="form-label">Choose Gender</label>
                                <select id="inputState" name="userGender" class="form-select">
                                    <option selected hidden>Gender</option>
                                    <option value="female">Female</option>
                                    <option value="male">Male</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <label class="form-label">Email</label>
                                @Html.EditorFor(model => model.userEmail, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col text-center">
                                <button type="submit" value="Save" class="btn btn-primary">Confirm</button>
                                <button class="btn btn-primary"> @Html.ActionLink("Cancel", "Users")</button>

                            </div>
                        </div>
                    </form>
                }
            </div>

        </div>
    </div>
</section>


